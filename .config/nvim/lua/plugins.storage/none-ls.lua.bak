-- none-ls wraps command-line tools like Black, Prettier, Stylua, etc,
-- allowing them to function as sources for Neovim's built-in LSP client.
-- This eliminates the need for separate plugins for each linter or formatter.
--
-- maybe I will need this to use Black ?
return {
    "nvimtools/none-ls.nvim",
    --event = { "BufReadPost", "BufNewFile", "BufWritePre" },
    enabled = false,
    dependencies = {
        "nvim-lua/plenary.nvim"
    },
    config = function()
        local null_ls = require("null-ls")
        null_ls.setup({
            border = "rounded",
            sources = {
                null_ls.builtins.formatting.black,
                null_ls.builtins.formatting.stylua,
                null_ls.builtins.formatting.yamlfmt,
                -- null_ls.builtins.formatting.latexindent,
                -- null_ls.builtins.diagnostics.texidote,
            },
        })

        vim.keymap.set("n", "<C-enter>", vim.lsp.buf.format, { desc = "LSP: format current buffer." })

    end,
}
